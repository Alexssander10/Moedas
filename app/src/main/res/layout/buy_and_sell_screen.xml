<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".userScreens.BuyAndSellScreen">

    <include
        android:id="@+id/toolbar_buy_and_sell"
        layout="@layout/toolbar_menu_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txT_Congratulation"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="238dp"
        android:layout_marginTop="219dp"
        android:fontFamily="@font/helvetica"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="32sp"
        android:focusable="true"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_home_screen"
        android:layout_width="151dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="112dp"
        android:layout_marginTop="567dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/arial"
        android:text="@string/homeBSScreen"
        android:background="@drawable/card_button_buy_and_sell_screen"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>