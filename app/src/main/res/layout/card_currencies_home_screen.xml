<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:layout_marginBottom="24dp"
    android:layout_marginHorizontal="24dp"
    android:background="@drawable/fundo_moedas">

    <TextView
        android:id="@+id/type_Currency"
        android:layout_width="148sp"
        android:layout_height="33sp"
        android:layout_marginStart="16sp"
        android:fontFamily="@font/arial_black"
        android:gravity="start"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="USD"/>

    <TextView
        android:id="@+id/currency_Percentage"
        android:layout_width="131sp"
        android:layout_height="29sp"
        android:layout_marginStart="180sp"
        android:fontFamily="@font/arial"
        android:gravity="end"
        android:text="0,53%"
        android:textColor="#FF7ED321"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>